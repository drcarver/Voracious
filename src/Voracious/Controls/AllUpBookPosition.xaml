<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Voracious.Reader.Controls.AllUpBookPosition"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400">

    <Grid Height="15" SizeChanged="OnSizeChanged">
        <Canvas x:Name="uiGridLines" />
        <ProgressBar x:Name="uiPosition" Minimum="0" Maximum="1.0" 
                     Value="0.5" Tapped="OnPositionTapped" />
    </Grid>
</ContentView>
